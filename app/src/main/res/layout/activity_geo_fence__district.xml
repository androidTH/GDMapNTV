<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gdmap.newscctv.GeoFence_District_Activity">

    <EditText
        android:id="@+id/tv_customid"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="parent"
        android:textSize="16sp"
        android:text="haha"/>
    <EditText
        android:id="@+id/tv_keyword"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_customid"
        app:layout_constraintLeft_toRightOf="@+id/tv_customid"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btn_geofence"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="地区围栏"
        app:layout_constraintLeft_toRightOf="@+id/tv_keyword"
        />
    <com.amap.api.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_customid"/>

</android.support.constraint.ConstraintLayout>
